<%= link_to monthly_order_path(@lastmonth) do %>
<i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
<% end %>
<%= editMonth(params[:yyyymm]) %>
<%= link_to monthly_order_path(@nextmonth) do %>
<i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <% @column_headers.each.with_index do |column_header| %>
      <th>
        <%= column_header.name %>
        <%= column_header.price %>円
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @row_headers.each do |target_day| %>
    <tr>
      <td>
        <%= target_day %>
      </td>
      <% (@orders[target_day]).each do |order| %>
      <td>
        <%= form_with model: order, id: order[:id] do |f| %>
        <div class="form-row align-items-center">
          <div class="col-sm-7">
            <%= f.number_field :number, in: 0...100, class: "form-control" %>
          </div>
          <div class="col-auto my-1">
            <%= button_tag(type: 'f.submit', class: "btn btn-primary") do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
            <% end %>
          </div>

          <% end %>
          <%# <%= @monthly_lists[i][n] %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>