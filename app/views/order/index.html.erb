<%  @page_title = "Order" %>
<h1>
  <%= @page_title %>
</h1>
<table class="list">
  <tr>
    <th>注文日</th>
    <% @items.each.with_index do |item| %>
    <th>
      <%= item.name %><br>
      <%= item.price %>円</th>
    <% end %>
  </tr>
  <% @target_days.each.with_index do |target_day, i| %>
  <tr>
    <td>
      <%= target_day %>
    </td>
    <% (0..@items.count).each do |n| %>
    <td>
      <%= @monthly_lists[i][n] %>
    </td>
    <% end %>
  </tr>
  <% end %>
</table>