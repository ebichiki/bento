<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <% @column_headers.each.with_index do |column_header| %>
      <th>
        <%= column_header.name %>
        <%= column_header.price %>円
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @row_headers.each do |target_day| %>
    <tr>
      <td>
        <%= target_day %>
      </td>
      <% (@orders[target_day]).each do |order| %>
      <td>
        <%= form_with model: order, id: order[:id] do |f| %>
        <%= f.number_field :number %>
        <%= f.submit %>
        <% end %>
        <%# <%= @monthly_lists[i][n] %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>